<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwillbs.mapper.ChatMapper">

	<insert id="createRoom">
	insert into CHATROOM(Member_email, PRO_USER_email, CLASS_class_id)
	values (#{Member_email}, #{PRO_USER_email}, #{CLASS_class_id})
	</insert>


	<insert id="saveRoom">
		insert into CHATROOM(session_name) values(#{session_name})
	</insert>
	<insert id="saveUsers">
		insert into CHATROOMENTER(account_email, pro_email,session_name) values (#{account_email}, #{pro_email},#{session_name})
	</insert>
	<select id="getChatMessage" resultType="com.itwillbs.chat.model.domain.ChatRoomEnterDTO">
		select * from MESSAGE where session_name = #{session_name}
	</select>
	<select id="findBySession_name" resultType="com.itwillbs.chat.model.domain.ChatRoomEnterDTO">
		select * from CHATROOMENTER where session_name = #{session_name}
	</select>

	<select id="findByChatRoom" resultType="com.itwillbs.chat.model.domain.ChatRoomEnterDTO">
		select * from CHATROOMENTER where session_name = #{session_name}
	</select>

	<select id="findRoomAccount_email" resultType="com.itwillbs.chat.model.domain.ChatRoomEnterDTO">
		select * from CHATROOMENTER where account_email = #{account_email}
	</select>

	<select id="findRoomPro_email" resultType="com.itwillbs.chat.model.domain.ChatRoomEnterDTO">
		select * from CHATROOMENTER where pro_email = #{pro_email}
	</select>



<!-- 	<update id=""></update> -->
<!-- 	<delete id=""></delete> -->
<!-- 	<select id=""></select> -->

</mapper>